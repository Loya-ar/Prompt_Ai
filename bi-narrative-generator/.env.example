# Google Gemini API Configuration (PRIMARY)
# Get your FREE API key at: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Alternative API key name (if using different variable name)
GOOGLE_API_KEY=your_google_api_key_here

# ===============================================================================
# Application Settings
# ===============================================================================

# Streamlit Configuration
STREAMLIT_THEME=light
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Application Behavior
DEBUG_MODE=false
ENABLE_DEMO_MODE=true
DEFAULT_ANALYSIS_MODE=advanced
SHOW_TECHNICAL_DETAILS=true

# Performance Settings
MAX_UPLOAD_SIZE_MB=200
MAX_RECORDS_ANALYSIS=50000
ANALYSIS_TIMEOUT_SECONDS=300
GENERATION_TIMEOUT_SECONDS=60

# Quality Thresholds
MIN_QUALITY_SCORE=80.0
TARGET_WORD_COUNT=500
MAX_WORD_COUNT=3000

# ===============================================================================
# API Configuration
# ===============================================================================

# Gemini Model Settings
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_TOKENS=2048

# Rate Limiting
API_CALLS_PER_MINUTE=60
API_DAILY_QUOTA=1000

# ===============================================================================
# Business Intelligence Settings
# ===============================================================================

# Default Business Domain
DEFAULT_DOMAIN=general

# Supported Domains
SUPPORTED_DOMAINS=sales,marketing,finance,operations,hr

# Default Narrative Style
DEFAULT_NARRATIVE_STYLE=executive_summary

# Default Audience
DEFAULT_AUDIENCE=executive

# ===============================================================================
# Export Configuration
# ===============================================================================

# Export Formats
ENABLE_HTML_EXPORT=true
ENABLE_MARKDOWN_EXPORT=true
ENABLE_JSON_EXPORT=true

# Report Styling
HTML_TEMPLATE=executive_premium
CORPORATE_STYLING=true

